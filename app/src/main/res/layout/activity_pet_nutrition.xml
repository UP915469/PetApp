<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".PetNutrition">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/food_img_1"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:layout_marginLeft="10dp"
            android:maxWidth="125dp"
            android:maxHeight="145dp"
            android:minWidth="125dp"
            android:minHeight="145dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/pet_img"/>

        <ImageView
            android:id="@+id/food_img_2"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:maxWidth="125dp"
            android:maxHeight="145dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="50dp"
            android:minWidth="125dp"
            android:minHeight="145dp"/>

        <ImageView
            android:id="@+id/food_img_3"
            android:layout_width="110dp"
            android:layout_height="145dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/pet_img"
            android:maxWidth="125dp"
            android:maxHeight="145dp"
            android:minWidth="125dp"
            android:minHeight="145dp"/>

        <TextView
            android:id="@+id/food_name_1"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="195dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="#F8F4F4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/food_name_2"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="195dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="#F8F4F4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/food_name_3"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="195dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textColor="#F8F4F4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="234dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/Click_Food"
            android:textColor="#F8F4F4" />

        <TextView
            android:id="@+id/nutrition_comments"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp"
            android:minHeight="150dp"
            android:textSize="12sp" />
    </RelativeLayout>
</ScrollView>